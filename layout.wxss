.layout {
  display: flex;
  flex-wrap: nowrap;
  align-items: stretch;
  justify-content: flex-start;
  box-sizing: border-box;
}

.layout.row {
  flex-direction: row;
}

.layout.col {
  flex-direction: column;
}

.layout.center {
  align-items: center;
}

.layout.mid {
  justify-content: center;
}